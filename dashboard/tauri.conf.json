{
  "productName": "Quant Invest Dashboard",
  "version": "1.0.0",
  "identifier": "com.quant-invest.dashboard",
  "build": {
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Quant Invest Dashboard",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readDir": true,
        "readFile": true,
        "writeFile": true
      },
      "http": {
        "all": false,
        "request": true,
        "fetch": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "msi",
        "nsis",
        "deb"
      ],
      "nsis": {
        "installerIcon": null,
        "uninstallerIcon": null
      }
    }
  }
}
